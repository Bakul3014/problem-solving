#include<bits/stdc++.h>
using namespace std;
int main(){
float a;
cin>>a;
if(0<a && a<=400){
    float e=a*.15;
    float f= a+e;
     cout<<"Novo salario: "<<fixed<<setprecision(2)<<f<<endl;
     cout<<"Reajuste ganho: "<<fixed<<setprecision(2)<<e<<endl;
     cout<<"Em percentual: 15 %"<<endl;
}else if(400.01<a &&a<=800.00){
float e=a*.12;
    float f= a+e;
     cout<<"Novo salario: "<<fixed<<setprecision(2)<<f<<endl;
     cout<<"Reajuste ganho: "<<fixed<<setprecision(2)<<e<<endl;
     cout<<"Em percentual: 12 %"<<endl;
}else if(800.01<a && a<=1200.00){
float e=a*.10;
    float f= a+e;
     cout<<"Novo salario: "<<fixed<<setprecision(2)<<f<<endl;
     cout<<"Reajuste ganho: "<<fixed<<setprecision(2)<<e<<endl;
     cout<<"Em percentual: 10 %"<<endl;
}else if(1200.01<a&&a<=2000.00){
float e=a*.07;
    float f= a+e;
     cout<<"Novo salario: "<<fixed<<setprecision(2)<<f<<endl;
     cout<<"Reajuste ganho: "<<fixed<<setprecision(2)<<e<<endl;
     cout<<"Em percentual: 7 %"<<endl;
}else{
float e=a*.04;
    float f= a+e;
     cout<<"Novo salario: "<<fixed<<setprecision(2)<<f<<endl;
     cout<<"Reajuste ganho: "<<fixed<<setprecision(2)<<e<<endl;
     cout<<"Em percentual: 4 %"<<endl;
}


return 0;

}
